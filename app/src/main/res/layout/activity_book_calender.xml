<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="공연이름"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center"/>

    <CalendarView
        android:id="@+id/simple_calendarview"
        android:layout_width="345dp"
        android:layout_height="345dp"
        android:layout_gravity="center"
        />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="시간"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="잔여석"
            android:textColor="@color/black"
            android:layout_marginLeft="190dp"
            />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="20dp"
                android:id="@+id/timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:id="@+id/menubar"
        android:layout_marginTop="7dp"
        android:background="@color/black">
        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:padding="10dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_baseline_home_24"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커뮤니티"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_baseline_3p_24"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/mypage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_baseline_person_24"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_baseline_close_24"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>