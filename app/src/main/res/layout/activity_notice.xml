<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/noticetitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="일이삼사오육칠팔구십"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/noticedate"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="17:19"
        android:textColor="#99000000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/noticetitle"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/slash1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text=" | "
        android:textColor="#99000000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/noticetitle"
        app:layout_constraintLeft_toRightOf="@id/noticedate"

        />



    <TextView
        android:id="@+id/slash2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text=" | "
        android:textColor="#99000000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/noticetitle"
        app:layout_constraintRight_toLeftOf="@+id/views"
        />

    <TextView
        android:id="@+id/noticeviews"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="151"
        android:textColor="#99000000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/noticetitle"
        app:layout_constraintLeft_toRightOf="@id/slash1"

        />
</androidx.constraintlayout.widget.ConstraintLayout>