
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/show_poster"
        android:layout_width="200dp"
        android:layout_height="275dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:text="공연이름"
        android:id="@+id/titlelabel"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_marginTop="19.77dp"/>
    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="NT LIVE 한여름 밤의 꿈"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/titlelabel"/>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#C6C6C6"
        android:id="@+id/hr0"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/title_label"
        android:layout_marginVertical="19.77dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:text="공연기간"
        android:id="@+id/periodlabel"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/hr0"/>
    <TextView
        android:id="@+id/period_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="210304 ~ 210420"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/periodlabel"/>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#C6C6C6"
        android:id="@+id/hr1"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/period_label"
        android:layout_marginVertical="19.77dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="관람시간(분)"
        android:id="@+id/runtimelabel"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/hr1"/>
    <TextView
        android:id="@+id/runtime_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="210"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_below="@+id/runtimelabel"/>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#C6C6C6"
        android:id="@+id/hr2"
        android:layout_below="@+id/runtime_label"
        android:layout_marginTop="19.77dp"/>


    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#C6C6C6"
        android:id="@+id/hr3"
        android:layout_above="@+id/bottom_layout0"
        android:layout_marginTop="19.77dp"/>

    <LinearLayout
        android:id="@+id/bottom_layout0"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/review"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:text="후기"
            android:layout_margin="2dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#ef4f4f"
            android:background="@drawable/button_round"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/goticekt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:elevation="20dp"
            android:text="예매하기"
            android:layout_margin="1px"
            android:layout_gravity="bottom"
            android:backgroundTint="#ef4f4f"
            android:background="@drawable/button_round"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>
